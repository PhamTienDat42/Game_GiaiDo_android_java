<!-- res/layout/activity_add_question.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu hỏi:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextQuestion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textViewQuestion"
        android:layout_marginTop="8dp"
        android:hint="Nhập câu hỏi" />

    <TextView
        android:id="@+id/textViewAnswerA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextQuestion"
        android:layout_marginTop="16dp"
        android:text="Đáp án A:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextAnswerA"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textViewAnswerA"
        android:layout_marginTop="8dp"
        android:hint="Nhập đáp án A" />

    <TextView
        android:id="@+id/textViewAnswerB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAnswerA"
        android:layout_marginTop="16dp"
        android:text="Đáp án B:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextAnswerB"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textViewAnswerB"
        android:layout_marginTop="8dp"
        android:hint="Nhập đáp án B" />

    <TextView
        android:id="@+id/textViewAnswerC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAnswerB"
        android:layout_marginTop="16dp"
        android:text="Đáp án C:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextAnswerC"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textViewAnswerC"
        android:layout_marginTop="8dp"
        android:hint="Nhập đáp án C" />

    <TextView
        android:id="@+id/textViewAnswerD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAnswerC"
        android:layout_marginTop="16dp"
        android:text="Đáp án D:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextAnswerD"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textViewAnswerD"
        android:layout_marginTop="8dp"
        android:hint="Nhập đáp án D" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAnswerD"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radioButtonA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A" />

        <RadioButton
            android:id="@+id/radioButtonB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B" />

        <RadioButton
            android:id="@+id/radioButtonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C" />

        <RadioButton
            android:id="@+id/radioButtonD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/radioGroup"
        android:layout_marginTop="16dp"
        android:text="Gửi câu hỏi" />

    </RelativeLayout>
</ScrollView>